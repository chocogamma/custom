{
    // 1. Setting for python and terminal...
    "[python]": {
        "editor.formatOnSave": true
    },
    "autoDocstring.startOnNewLine": true,
    "python.dataScience.alwaysTrustNotebooks": true,
    "python.dataScience.askForKernelRestart": false,
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.formatting.autopep8Args": ["--max-line-length=120"],
    "python.formatting.provider": "autopep8",
    "python.languageServer": "Microsoft",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.showStartPage": false,
    "python.terminal.activateEnvironment": false,
    "python.testing.pytestEnabled": true,
    "terminal.integrated.shell.windows": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.shellArgs.windows": [],
    // ----------------------------------------------------------------------------------
    // 2. Setting for editor related...
    "atomKeymap.promptV3Features": true,
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 21,
    "editor.matchBrackets": "never",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.parameterHints.enabled": false,
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.tokenColorCustomizations": {
        "comments": "#FF4500"
    },
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.menuBarVisibility": "hidden",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    // ----------------------------------------------------------------------------------
    // 3. Setting for todo-tree.highlights.customHighlight...
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "icon": "bug",
            "background": "#FFFF00",
            "borderRadius": "5px",
            "foreground": "#000000",
            "iconColour": "#FFFF00"
        },
        "FIXME": {
            "icon": "flame",
            "background": "#FF00FF",
            "borderRadius": "5px",
            "foreground": "#FFFFFF",
            "iconColour": "#FF00FF"
        },
        "HACK": {
            "icon": "rocket",
            "background": "#00FF7F",
            "borderRadius": "5px",
            "foreground": "#000000",
            "iconColour": "#00FF7F"
        },
        "TODO": {
            "icon": "check",
            "background": "#FF4500",
            "borderRadius": "5px",
            "foreground": "#FFFFFF",
            "iconColour": "#00FF7F"
        },
        "XXX": {
            "icon": "x",
            "background": "#8B4513",
            "borderRadius": "5px",
            "foreground": "#FFFFFF",
            "iconColour": "#8B4513"
        }
    },
    "todo-tree.highlights.defaultHighlight": {
        "icon": "checklist",
        "iconColour": "#FF4500"
    },
    // ----------------------------------------------------------------------------------
    // 4. Setting for workbench.colorCustomizations...
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#333333",
        "activityBar.activeBorder": "#FF4500",
        "activityBar.background": "#333333",
        "activityBarBadge.background": "#FF4500",
        "badge.background": "#4D4D4D",
        "editor.background": "#1E1E1E",
        "editor.lineHighlightBackground": "#1E1E1E",
        "editor.lineHighlightBorder": "#282828",
        "editor.selectionHighlightBackground": "#4B4B4B",
        "editor.selectionHighlightBorder": "#1E1E1E",
        "editorCursor.foreground": "#FF4500",
        "editorGroupHeader.tabsBackground": "#252525",
        "input.background": "#3C3C3C",
        "list.hoverBackground": "#373737",
        "sideBar.background": "#252525",
        "sideBarSectionHeader.background": "#252525",
        "statusBar.background": "#202325",
        "statusBar.noFolderBackground": "#68217A",
        "tab.activeBackground": "#1E1E1E",
        "tab.hoverBackground": "#252525",
        "tab.inactiveBackground": "#2D2D2D",
        "tab.unfocusedActiveBackground": "#1E1E1E",
        "tab.unfocusedHoverBackground": "#252525",
        "tab.unfocusedInactiveBackground": "#2D2D2D",
        "terminal.background": "#0F0F0F",
        "titleBar.activeBackground": "#3C3C3C",
        "titleBar.inactiveBackground": "#3C3C3C"
    },
    // ----------------------------------------------------------------------------------
    // 5. Setting for front-end related...
    "debug.node.autoAttach": "on",
    "emmet.preferences": {
        "format.noIndentTags": []
    },
    "emmet.showSuggestionsAsSnippets": true,
    "liveServer.settings.donotShowInfoMsg": true,
    // ----------------------------------------------------------------------------------
    // 6. Setting for csscomb related...
